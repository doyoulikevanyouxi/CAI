[vertex_shader]
#version 330 core
layout (location = 0) in vec3 vertex;
uniform mat4 model;		//模型矩阵
uniform mat4 projection; //投影矩阵

void main(){
	gl_Position = projection  * model * vec4(vertex,1.0f);
}


[fragment_shader]
#version 330 core
out vec4 fragColor;
void main(){
   fragColor = vec4(0.5,0.2,0.1,1.0);
}